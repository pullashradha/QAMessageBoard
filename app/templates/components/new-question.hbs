{{#if addNewQuestion}}
  <div class="new-question">
    <h2>Create a New Question</h2>
    <form class="form-group row">
      <div>
        <h3>Question</h3>
        {{input value=question id="question" class="form-control"}}
      </div>
      <div class="col-xs-6">
        <h3>Author</h3>
        {{input value=questionAuthor id="questionAuthor" class="form-control"}}
      </div>
      <div class="col-xs-6">
        <h3>Date</h3>
        {{input value=questionDate id="questionDate" class="form-control" type="date"}}
      </div>
      <div>
        <h3>Notes</h3>
        {{textarea value=notes id="notes" class="form-control"}}
      </div>
      <button {{action "saveQuestion"}} class="btn btn-success">Save Question</button>
    </form>
  </div>
{{else}}
  <button {{action "showNewQuestionForm"}} class="btn btn-primary">New Question</button>
{{/if}}
